<section class="container-fluid vh-100" style="background-color: var(--access-color-2);">
<div class="container py-5 h-100">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col col-xl-10">
      <div class="card" style="border-color: var(--accent-color);">
        <div class="row g-0">
          <div class="col-md-8 col-lg-8 col-sm-12 d-flex align-items-center">
            <div class="card-body p-4 p-lg-5 text-black">
              <h4>Change your password</h4>

              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <%= f.hidden_field :reset_password_token %>

                <div class="field pb-2">
                  <%= f.label :password, "New password" %><br />
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                  <% end %>
                  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
                </div>

                <div class="field pb-2">
                  <%= f.label :password_confirmation, "Confirm new password" %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
                </div>

                <div class="actions">
                  <%= f.submit "Change my password", class: 'btn btn btn-outline-success' %>
                </div>
              <% end %>
              <%= render "devise/shared/links" %>
              </div>
</div>  
</div>
</div>
</div>
</div>
</div>
</section>

