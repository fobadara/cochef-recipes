<div class="row">
    <div class="mb-3 col-md-8 offset-md-2 inventory-card shadow">
        <%= image_tag("create-inventory.png", class: "card-img-top") %>
        <div class="card-body">
        <h5 class="card-title">Add New Inventory</h5>
        <p class="card-text">Use this to add storage for a complete list of food items available to make recipes </p>
        <%= form_with model: @inventory, url: inventories_path, local: true do |form| %>
            <div class="form-floating mb-3">
                <%= form.text_field :name, class: "form-control", required: true %>
                <%= form.label :name, "Inventory Name *" %>
            </div>
            <div class="form-floating mb-3">
                <%= form.text_area :description, size: "70x5", class: "form-control" %>
                <%= form.label :description, "How would you describe this inventory" %>
            </div>
            <div class="form-group mt-3">
                <%= form.submit 'Add Inventory', class: "btn btn-accent", data: {disable_with: "Loading..."} %>
            </div>
        <% end %>
        <p class="card-text"><small class="text-muted">Updating as <%= current_user.name %></small></p>
        </div>
  </div>
</div>